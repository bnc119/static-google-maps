<h1>Listing Landmarks</h1>


<div class="form-search">
  <div class="input-append">
    <%= form_tag locations_path, :method => :get do %>
      <p>
      <%= text_field_tag :search, params[:search] %>
      <input type="submit" class="btn btn-primary" value="Search Near">
      </p>
    <% end %>
  </div>
</div>

<table>
  <tr>
    <th>Landmark</th>
    <th>Latitude</th>
    <th>Longitude</th>
    
    <th></th>
    <th></th>
  </tr>


<% @locations.each do |location| %>
  <tr>
    <td><%= link_to location.address, location %></td>
    <td><%= location.latitude %></td>
    <td><%= location.longitude %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Remove', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<h3>
<%= link_to 'Add New Landmark', new_location_path %>
</h3>